# Let the project modify the database
spring.jpa.hibernate.ddl-auto=update

# Database Connection
databaseName=name_database

spring.datasource.url=jdbc:mysql://localhost:PORT/${databaseName}
spring.datasource.username=user_database
spring.datasource.password=password_user_database

# Show queries in the logs
spring.jpa.show-sql=true

# Code SQL with indentation
spring.jpa.properties.hibernate.format_sql=true

# ROUTE PREFIX
apiPrefix=api

# JWT
rsa.private-key=classpath:certs/private.pem
rsa.public-key=classpath:certs/public.pem

logging.level.org.springframwork.security=DEBUG
